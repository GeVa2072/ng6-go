{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}